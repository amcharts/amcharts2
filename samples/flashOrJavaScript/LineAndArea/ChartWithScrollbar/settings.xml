<settings>
  <text_color>FFFFFF</text_color>
  <digits_after_decimal>2</digits_after_decimal>
  <background>
    <file>../../samples/flashOrJavaScript/LineAndArea/ChartWithScrollbar/bg.swf</file>
  </background>
  <plot_area>
    <margins>
      <left>0</left>
      <right>0</right>
      <top>15</top>
    </margins>
  </plot_area>
  <grid>
    <x>
      <alpha>0</alpha>
      <approx_count>10</approx_count>
    </x>
    <y_left>
      <color>FFFFFF</color>
      <alpha>10</alpha>
    </y_left>
  </grid>
  <axes>
    <x>
      <width>1</width>
      <color>FFFFFF</color>
      <alpha>0</alpha>
    </x>
    <y_left>
      <width>1</width>
      <alpha>0</alpha>
    </y_left>
  </axes>
  <values>
    <x>
      <skip_first>1</skip_first>
      <skip_last>1</skip_last>
    </x>
    <y_left>
      <inside>1</inside>
      <skip_last>1</skip_last>
      <unit>$</unit>
      <unit_position>left</unit_position>
    </y_left>
  </values>
  <scroller>
    <height>15</height>
    <color>000000</color>
    <alpha>30</alpha>
    <bg_color>FFFFFF</bg_color>
    <bg_alpha>20</bg_alpha>
  </scroller>
  <indicator>
    <selection_color>000000</selection_color>
  </indicator>
  <legend>
    <alpha>20</alpha>
    <margins>15</margins>
    <align>center</align>
    <values>
      <enabled>1</enabled>
      <text>{value}$</text>
    </values>
  </legend>
  <zoom_out_button>
    <alpha>100</alpha>
    <text_color>FFFFFF</text_color>
    <text_color_hover>000000</text_color_hover>
  </zoom_out_button>
  <graphs>
    <graph gid="1">
      <title>Nominal</title>
      <color>FFCC00</color>
      <color_hover>CC0000</color_hover>
      <balloon_text_color>000000</balloon_text_color>
      <balloon_text><![CDATA[<b>${value}</b><br>{description}]]></balloon_text>
      <bullet>round</bullet>
      <bullet_size>6</bullet_size>
    </graph>
    <graph gid="2">
      <title>Inflation Adjusted 2006</title>
      <color>000000</color>
      <color_hover>CC0000</color_hover>
      <balloon_text><![CDATA[<b>${value}</b>]]></balloon_text>
      <bullet>round</bullet>
      <bullet_size>6</bullet_size>
      <bullet_alpha>100</bullet_alpha>
    </graph>
  </graphs>
  <labels>
    <label lid="0">
      <text><![CDATA[<b>Historical Crude Oil Prices</b>]]></text>
      <y>50</y>
      <text_size>15</text_size>
      <align>center</align>
    </label>
  </labels>
</settings>